<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CablePinTesterSpinner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CablePinTesterImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="CablePinTesterTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CablePinLinearLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CableCrimpedImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>


</resources>
